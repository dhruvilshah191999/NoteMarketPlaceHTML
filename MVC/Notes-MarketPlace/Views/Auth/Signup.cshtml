@model Notes_MarketPlace.Models.Member
@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_AuthLayoutPage.cshtml";
}
<section id="home">
    <div class="container" id="container-box">
        <div class="row">
            <div class="col-md-12" align="center">
                <img src="~/images/login/top-logo.png" alt="Top Photo" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 form-box">
                <h3>Create an Account</h3>
                <p>Enter your details to signup</p>
                @if (ViewBag.ErrorStatus)
                {
                    <p class="error-message"><i class="fa fa-exclamation-triangle"></i>@ViewBag.ErrorMessage </p>
                }

                @if (ViewBag.SucessStatus)
                {
                    <p class="success-message"><i class="fa fa-check-circle"></i> Your account has been successfully created.</p>
                }

                <form action="/Auth/Signup" method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName)
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your first name", Required = "true" } })
                        <div class="invalid-feedback">The first name that you've entered is incorrect.</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, new { @class = "margin-label" })
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your last name", Required = "true" } })
                        <div class="invalid-feedback">The last name that you've entered is incorrect.</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "margin-label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email", Required = "true" } })
                        <div class="invalid-feedback">The email that you've entered is incorrect.</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "margin-label" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "password-field", @class = "form-control", placeholder = "Enter your password", Required = "true" , type="password" } })
                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        <div class="invalid-feedback">The password that you've entered is incorrect.</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CPassword, new { @class = "margin-label" })
                        @Html.EditorFor(model => model.CPassword, new { htmlAttributes = new { @id = "password-field1", @class = "form-control", placeholder = "Re-Enter your password", Required = "true", type = "password" } })
                        <span toggle="#password-field1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        <div class="invalid-feedback">The password that you've entered is incorrect.</div>
                    </div>
                    <input type="submit" class="btn-submit margin-label" value="SIGN UP">
                </form>
                <div id="sign-up">
                    <p>Already have an account?  @Html.ActionLink("Login", "Index", "Auth")</p>
                </div>
            </div>
        </div>
        <div style="padding-bottom: 100px;"></div>
    </div>
</section>

